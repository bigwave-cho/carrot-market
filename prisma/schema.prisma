generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model User{
 id         Int       @id @default(autoincrement())
 // Int보다 더 큰 숫자 가능한 BigInt를 프리스마가 지원함.
 phone      BigInt?   @unique
 email      String?    @unique
 name       String 
 avatar     String?
 createAt   DateTime  @default(now())
 updatedAt  DateTime  @updatedAt
 tokens     Token[]
}

model Token{
  id        Int        @id @default(autoincrement())
  payload   String     @unique
  createAt  DateTime   @default(now())
  updatedAt DateTime  @updatedAt
  // fields의 userId와 User의 id를 연결, onDelete시 Cascade(User삭제시 연결된 토큰 삭제)
  // db에서 토큰을 통해 가져올 때 include:{user:true}로 접근 가능.
  user      User @relation(fields: [userId], references: [id],onDelete: Cascade)
  userId    Int
  @@index([userId])
}

